#include <stdio.h>
#include <string.h>

int countTopics(char *a, char *b, int m) {
    int count = 0;
    for (int i = 0; i < m; i++) {
        if (a[i] == '1' || b[i] == '1') {
            count++;
        }
    }
    return count;
}

int main() {
    int n, m;
    scanf("%d %d", &n, &m);

    char topic[n][m + 1]; // +1 for null terminator
    for (int i = 0; i < n; i++) {
        scanf("%s", topic[i]);
    }

    int maxTopics = 0, teamCount = 0;

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            int known = countTopics(topic[i], topic[j], m);
            if (known > maxTopics) {
                maxTopics = known;
                teamCount = 1;
            } else if (known == maxTopics) {
                teamCount++;
            }
        }
    }

    printf("%d\n%d\n", maxTopics, teamCount);
    return 0;
}
