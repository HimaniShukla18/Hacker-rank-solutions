#include <stdio.h>

int pylons(int n, int k, int arr[]) {
    int count = 0;
    int i = 0;

    while (i < n) {
        int plant = -1;

        // Try to place the plant as far right as possible within range
        for (int j = i + k - 1; j >= i - k + 1 && j >= 0; j--) {
            if (j < n && arr[j] == 1) {
                plant = j;
                break;
            }
        }

        if (plant == -1)
            return -1;

        count++;
        i = plant + k; // Skip cities covered by this plant
    }

    return count;
}

int main() {
    int n, k;
    scanf("%d %d", &n, &k);
    int arr[n];
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    int result = pylons(n, k, arr);
    printf("%d\n", result);
    return 0;
}
