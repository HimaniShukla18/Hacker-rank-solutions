#include <stdio.h>

int viralAdvertising(int n) {
    int shared = 5;
    int cumulativeLikes = 0;

    for (int day = 1; day <= n; day++) {
        int liked = shared / 2;
        cumulativeLikes += liked;
        shared = liked * 3;
    }

    return cumulativeLikes;
}

int main() {
    int n;
    scanf("%d", &n);

    int result = viralAdvertising(n);
    printf("%d\n", result);

    return 0;
}
