#include <stdio.h>

int pickingNumbers(int a[], int n) {
    int freq[101] = {0};  // Since 0 <= a[i] <= 100
    int maxLength = 0;

    // Count frequency of each number
    for (int i = 0; i < n; i++) {
        freq[a[i]]++;
    }

    // Check max length of subarray with abs difference <= 1
    for (int i = 1; i <= 100; i++) {
        int currentLength = freq[i] + freq[i - 1];
        if (currentLength > maxLength) {
            maxLength = currentLength;
        }
    }

    return maxLength;
}

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int result = pickingNumbers(a, n);
    printf("%d\n", result);

    return 0;
}
