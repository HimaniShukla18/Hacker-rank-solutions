#include <stdio.h>
#include <stdlib.h>

char* fairRations(int B_count, int* B) {
    int total_loaves = 0;

    for (int i = 0; i < B_count - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            total_loaves += 2;
        }
    }

    // Check if all are even
    for (int i = 0; i < B_count; i++) {
        if (B[i] % 2 != 0) {
            return "NO";
        }
    }

    // Convert int to string
    static char result[12];
    sprintf(result, "%d", total_loaves);
    return result;
}

int main() {
    int n;
    scanf("%d", &n);
    int B[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &B[i]);
    }

    printf("%s\n", fairRations(n, B));
    return 0;
}
