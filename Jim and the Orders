#include <stdio.h>
#include <stdlib.h>


typedef struct {
    int customer_number;
    int delivery_time;
} Order;

int compareOrders(const void *a, const void *b) {
    Order *orderA = (Order *)a;
    Order *orderB = (Order *)b;

    if (orderA->delivery_time != orderB->delivery_time) {
        return orderA->delivery_time - orderB->delivery_time;
    } else {
        return orderA->customer_number - orderB->customer_number;
    }
}

int main() {
    int n;
    scanf("%d", &n);

    Order orders[n];
    int order_number, prep_time;

    
    for (int i = 0; i < n; i++) {
        scanf("%d %d", &order_number, &prep_time);
        orders[i].customer_number = i + 1; // Customer numbers are 1-based
        orders[i].delivery_time = order_number + prep_time;
    }

    
    qsort(orders, n, sizeof(Order), compareOrders);

   
    for (int i = 0; i < n; i++) {
        printf("%d", orders[i].customer_number);
        if (i < n - 1) {
            printf(" ");
        }
    }
    printf("\n");

    return 0;
}
